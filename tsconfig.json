{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "lib": ["es5", "es6", "esnext"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"]
}
